@model IEnumerable<Common.CurrentWork>

@if (ViewData["Contact"] != null)
{
    <h1 style="color:blue">@ViewData["Title"]</h1>
}

<meta http-equiv="refresh" content="4" />

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>ID </th>
        <th>Location</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Description</th>

        <th>Weather description</th>
        <th>Temperature [C]</th>
        <th>Wind speed [m/s]</th>
        <th>Clouds [%]</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.IdCurrentWork</td>
            <td>@d.Location</td>
            <td>@d.StartDate</td>
            <td>@d.EndDate</td>
            <td>@d.Description</td>

            <td>@d.WeatherDescription</td>
            <td>@d.Temp</td>
            <td>@d.WindSpeed</td>
            <td>@d.Clouds</td>
        </tr>
    }
</table>
